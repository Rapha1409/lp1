#include <iostream>
using namespace std;

int main() {
    double numero1, numero2, numero3, numero4;

    cout << "Digite o primeiro número: ";
    cin >> numero1;
    cout << "Digite o segundo número: ";
    cin >> numero2;
    cout << "Digite o terceiro número: ";
    cin >> numero3;
    cout << "Digite o quarto número: ";
    cin >> numero4;

    double peso1 = 1, peso2 = 2, peso3 = 3, peso4 = 4;

    double mediaPonderada = (numero1 * peso1 + numero2 * peso2 + numero3 * peso3 + numero4 * peso4) /
                            (peso1 + peso2 + peso3 + peso4);

    cout << "A média ponderada é: " << mediaPonderada << endl;

    return 0;
}
